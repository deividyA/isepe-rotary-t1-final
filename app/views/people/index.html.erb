<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h1>People</h1>

  <table class="table">
    <thead>
      <tr>
          <th>Name</th>
          <th>Doc number</th>
          <th>Phone</th>
          <th>Address</th>
          <th>Email</th>
          <th>Workplace</th>
          <th>Beneficiary</th>
          <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @people.each do |person| %>
        <tr>
            <td><%= person.name %></td>
            <td><%= person.doc_number %></td>
            <td><%= person.phone %></td>
            <td><%= person.address %></td>
            <td><%= person.email %></td>
            <td><%= person.workplace %></td>
            <td><%= person.beneficiary %></td>
            <td><%= link_to 'Show', person %></td>
          <td><%= link_to 'Edit', edit_person_path(person) %></td>
          <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Person', new_person_path, class: "btn btn-success min-width-btn" %>

</div>